<!DOCTYPE html>

<html>
<head>
	<meta charset="UTF-8">
	<title>Image Slider</title>

	<link rel="stylesheet" type="text/css" 	href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">




	<style type="text/css">
		img {
			width:100%;
			height:500px;

		}

		#slider {
			width: 1000px;
			height: 500px;
			margin:20px auto;
			position: relative;
			border: 8px solid white;
			box-shadow: 0px 0px 5px 2px green;
		}

		button {
			padding: 20px;
			/*width: 40px;*/
			/*height: 40px;*/
			border: none;
			background-color: #37f;
			font-size: 30px;
			color: white;
			position: absolute;
			top: 40%;
			cursor: pointer;
		}

		.next {
			border-radius: 10px 0px 0px 10px;
			margin-left: 940px;
		}

		.prev {
			border-radius: 0px 10px 10px 0px;

		}
	</style>





</head>
<body>


	<div id="slider">
		<div id="box">
		<!-- <img src="a.jpg" alt="a"> -->
		<img src="/assets/cocktails/a.jpg" alt="a">
			<!-- <img src="http://cdn.skim.gs/image/upload/v1456338112/msi/gary-coleman-old-photo_bgmi4w.jpg" alt="julius"> -->
		<!-- 	<img src="http://howtogetabiggerbutt.info/wp-content/uploads/2013/03/how-to-get-a-bigger-butt-in-a-month.jpeg" alt="bob"> -->
		</div>

		<!-- Buttons for controls slider -->
		<button class="prev fa fa-chevron-left" onclick="prevImage()"></button>
		<button class="next fa fa-chevron-right" onclick="nextImage()"></button>
	</div>





	<script type="text/javascript">
		var slider_content = document.getElementById('box');

		// contains images in an array
		var image = ['a', 'b', 'c', 'd', 'e'];

		var i = image.length;

		//function for next slide
		function nextImage() {
			if (i<image.length) {
				i= i+1;
			}else {
				i = 1;
			}
			slider_content.innerHTML = "<img src="+image[i -1]+".jpg>";
		}


		//function for prev slide

		function prevImage() {
			if (i<image.length+1 && i>1) {
				i= i-1;
			}else{
				i = image.length;
			}	
				slider_content.innerHTML = "<img src="+image[i-1]+".jpg>";

		}

		//script for auto image slider

		// setInterval(nextImage , 5000);

	</script>





	
</body>
</html>