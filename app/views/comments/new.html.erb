			<div class="contact-form">
				<%= form_for @comment do |f| -%><br>
				<%= f.text_field :name, :required => true, :placeholder => "Name", size: '80'  %><br><br>
				<%= f.text_field :email, :required => true, :placeholder => "Email", size: '80'  %><br><br>
				<%= f.text_field :message, :required => true, :placeholder => "Message", size: '80' %><br><br>
				<%= f.submit "Send it our way!", :class => 'submit-button' %>
				<% end -%>
			</div>


